@using Accounting.Domain.Models
@model NotBetEmployee
@{
    var formId = Model.Id + "form";
    var formTdId = Model.Id + "tdForm";
    var trId = Model.Id + "tr";
    var formToDeleteEmployee = Model.Id + "formToDelete";
}
<tr id="@trId">
    <td>@Model.InnerId</td>
    <td>@Model.Name</td>
    <td id="@formTdId">
       <div class="container">
           <div class="row">
               <div class="col-md-4">
                    <form asp-action="AddAccrualToEmployee" asp-controller="Document" id="@formId">
                        <input type="hidden" name="EmployeeId" value="@Model.Id" />
                        <input type="number" name="Ammount" class="form-control" />
                        <button type="button" onclick="sendForm('@formId', '/Document/AddAccrualToEmployee', '@formTdId')" class="btn btn-info mx-auto">Начислити</button>
                    </form>
               </div>
           </div>
       </div>
    </td>
    <td>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <form id="@formToDeleteEmployee">
                        <input type="hidden" name="EmployeeId" value="@Model.Id" />
                        <button type="button" onclick="sendForm('@formToDeleteEmployee', '/Document/DeleteEmployeeFromDocument', '@trId')" class="btn btn-info mx-auto">Видалити з документа</button>
                    </form>
                </div>
            </div>
        </div>
    </td>
</tr>